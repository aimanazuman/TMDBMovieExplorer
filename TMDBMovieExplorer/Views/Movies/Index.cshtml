@model TMDBMovieExplorer.Models.MovieResponse
@{
    var category = ViewBag.Category?.ToString() ?? "popular";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;

    // Fix ToTitleCase issue - create our own title formatting
    string GetFormattedTitle(string cat)
    {
        return cat switch
        {
            "popular" => "Popular Movies",
            "top-rated" => "Top Rated Movies",
            "now-playing" => "Now Playing Movies",
            _ => "Popular Movies"
        };
    }

    ViewData["Title"] = GetFormattedTitle(category);
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title">
            @if (category == "popular")
            {
                <span><i class="fas fa-fire text-danger me-2"></i>Popular Movies</span>
            }
            else if (category == "top-rated")
            {
                <span><i class="fas fa-trophy text-warning me-2"></i>Top Rated Movies</span>
            }
            else if (category == "now-playing")
            {
                <span><i class="fas fa-play text-success me-2"></i>Now Playing Movies</span>
            }
        </h1>
        <div class="btn-group" role="group">
            <a asp-action="Index" asp-route-category="popular"
               class="btn @(category == "popular" ? "btn-primary" : "btn-outline-primary")">
                <i class="fas fa-fire me-1"></i>Popular
            </a>
            <a asp-action="Index" asp-route-category="top-rated"
               class="btn @(category == "top-rated" ? "btn-primary" : "btn-outline-primary")">
                <i class="fas fa-trophy me-1"></i>Top Rated
            </a>
            <a asp-action="Index" asp-route-category="now-playing"
               class="btn @(category == "now-playing" ? "btn-primary" : "btn-outline-primary")">
                <i class="fas fa-play me-1"></i>Now Playing
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
        </div>
    }

    @if (Model?.Results?.Any() == true)
    {
        <div class="row">
            @foreach (var movie in Model.Results)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card movie-card h-100 shadow-sm">
                        <img src="@movie.FullPosterUrl" class="card-img-top" alt="@movie.Title"
                             style="height: 400px; object-fit: cover;" loading="lazy">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="card-text text-muted small flex-grow-1">
                                @(movie.Overview.Length > 100 ? movie.Overview.Substring(0, 100) + "..." : movie.Overview)
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>@movie.FormattedReleaseDate
                                    </small>
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-star"></i> @movie.VoteAverage.ToString("F1")
                                    </span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="fas fa-users me-1"></i>@movie.VoteCount votes
                                    </small>
                                    <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary btn-sm">
                                        <i class="fas fa-info-circle me-1"></i>Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (totalPages > 1)
        {
            <nav aria-label="Movie pages navigation">
                <ul class="pagination justify-content-center">
                    @if (currentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-route-category="@category" asp-route-page="@(currentPage - 1)">
                                <i class="fas fa-chevron-left"></i> Previous
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-route-category="@category" asp-route-page="@i">@i</a>
                        </li>
                    }

                    @if (currentPage < totalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-route-category="@category" asp-route-page="@(currentPage + 1)">
                                Next <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-film fa-5x text-muted mb-3"></i>
            <h3 class="text-muted">No movies found</h3>
            <p class="text-muted">Try browsing a different category or check back later.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-home me-2"></i>Back to Home
            </a>
        </div>
    }
</div>