@model TMDBMovieExplorer.Models.MovieDetails
@{
    ViewData["Title"] = Model?.Title ?? "Movie Details";
}

@if (Model != null)
{
    <div class="movie-details-hero" style="background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('@Model.FullBackdropUrl'); background-size: cover; background-position: center;">
        <div class="container py-5 text-white">
            <div class="row align-items-center">
                <div class="col-md-4 text-center mb-4 mb-md-0">
                    <img src="@Model.FullPosterUrl" alt="@Model.Title" class="img-fluid rounded shadow-lg" style="max-height: 500px;">
                </div>
                <div class="col-md-8">
                    <h1 class="display-4 fw-bold mb-3">@Model.Title</h1>
                    <div class="mb-3">
                        <span class="badge bg-warning text-dark fs-6 me-2">
                            <i class="fas fa-star"></i> @Model.VoteAverage.ToString("F1")
                        </span>
                        <span class="badge bg-secondary fs-6 me-2">
                            <i class="fas fa-users"></i> @Model.VoteCount.ToString("N0") votes
                        </span>
                        @if (!string.IsNullOrEmpty(Model.FormattedRuntime) && Model.FormattedRuntime != "Unknown")
                        {
                            <span class="badge bg-info fs-6 me-2">
                                <i class="fas fa-clock"></i> @Model.FormattedRuntime
                            </span>
                        }
                        <span class="badge bg-primary fs-6">
                            <i class="fas fa-calendar"></i> @Model.FormattedReleaseDate
                        </span>
                    </div>
                    @if (Model.Genres?.Any() == true)
                    {
                        <div class="mb-3">
                            @foreach (var genre in Model.Genres)
                            {
                                <span class="badge bg-dark me-1">@genre.Name</span>
                            }
                        </div>
                    }
                    <p class="lead">@Model.Overview</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-5">
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="mb-0"><i class="fas fa-info-circle me-2"></i>Movie Information</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6 mb-3">
                                <strong>Release Date:</strong><br>
                                <span class="text-muted">@Model.FormattedReleaseDate</span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.FormattedRuntime) && Model.FormattedRuntime != "Unknown")
                            {
                                <div class="col-sm-6 mb-3">
                                    <strong>Runtime:</strong><br>
                                    <span class="text-muted">@Model.FormattedRuntime</span>
                                </div>
                            }
                            <div class="col-sm-6 mb-3">
                                <strong>Rating:</strong><br>
                                <span class="text-muted">@Model.VoteAverage.ToString("F1")/10 (@Model.VoteCount.ToString("N0") votes)</span>
                            </div>
                            <div class="col-sm-6 mb-3">
                                <strong>Popularity:</strong><br>
                                <span class="text-muted">@Model.Popularity.ToString("F1")</span>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.FormattedBudget) && Model.FormattedBudget != "Unknown")
                            {
                                <div class="col-sm-6 mb-3">
                                    <strong>Budget:</strong><br>
                                    <span class="text-muted">@Model.FormattedBudget</span>
                                </div>
                            }
                            @if (Model.Revenue > 0)
                            {
                                <div class="col-sm-6 mb-3">
                                    <strong>Revenue:</strong><br>
                                    <span class="text-muted">@Model.Revenue.ToString("C0")</span>
                                </div>
                            }
                        </div>
                        @if (Model.Genres?.Any() == true)
                        {
                            <div class="mt-3">
                                <strong>Genres:</strong><br>
                                @string.Join(", ", Model.Genres.Select(g => g.Name))
                            </div>
                        }
                    </div>
                </div>

                @if (Model.ProductionCompanies?.Any() == true)
                {
                    <div class="card">
                        <div class="card-header">
                            <h4 class="mb-0"><i class="fas fa-building me-2"></i>Production Companies</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var company in Model.ProductionCompanies.Take(6))
                                {
                                    <div class="col-md-4 mb-3">
                                        <div class="text-center p-2 border rounded">
                                            @if (!string.IsNullOrEmpty(company.LogoPath))
                                            {
                                                <img src="https://image.tmdb.org/t/p/w200@company.LogoPath" alt="@company.Name" class="img-fluid mb-2" style="max-height: 50px;">
                                            }
                                            <small class="d-block">@company.Name</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Statistics</h4>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <strong>User Score</strong>
                            <div class="progress mt-1">
                                <div class="progress-bar bg-warning" role="progressbar" style="width: @(Model.VoteAverage * 10)%">
                                    @Model.VoteAverage.ToString("F1")/10
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <strong>Popularity</strong>
                            <div class="progress mt-1">
                                <div class="progress-bar bg-info" role="progressbar" style="width: @Math.Min(100, Model.Popularity)%">
                                    @Model.Popularity.ToString("F1")
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-4">
                            <a href="javascript:history.back()" class="btn btn-secondary w-100">
                                <i class="fas fa-arrow-left me-1"></i>Go Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container text-center py-5">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
            </div>
        }
        <i class="fas fa-film fa-5x text-muted mb-3"></i>
        <h3 class="text-muted">Movie not found</h3>
        <p class="text-muted">The requested movie could not be found or loaded.</p>
        <a asp-controller="Movies" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-arrow-left me-2"></i>Back to Movies
        </a>
    </div>
}