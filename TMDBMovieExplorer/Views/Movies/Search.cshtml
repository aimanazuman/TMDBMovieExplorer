@model TMDBMovieExplorer.Models.MovieResponse
@{
    ViewData["Title"] = "Search Results";
    var searchQuery = ViewBag.SearchQuery?.ToString() ?? "";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1><i class="fas fa-search me-2"></i>Search Results</h1>
            @if (!string.IsNullOrEmpty(searchQuery))
            {
                <p class="text-muted">
                    Showing results for: <strong>"@searchQuery"</strong>
                    @if (Model?.TotalResults > 0)
                    {
                        <span class="badge bg-primary ms-2">@Model.TotalResults.ToString("N0") results</span>
                    }
                </p>
            }
        </div>
        <a asp-controller="Movies" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Browse Movies
        </a>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Search" method="get" class="row g-3">
                <div class="col-md-9">
                    <input type="text" class="form-control" name="query" value="@searchQuery"
                           placeholder="Search for movies..." required>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i>Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
    {
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
        </div>
    }

    @if (Model?.Results?.Any() == true)
    {
        <div class="row">
            @foreach (var movie in Model.Results)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card movie-card h-100 shadow-sm">
                        <img src="@movie.FullPosterUrl" class="card-img-top" alt="@movie.Title"
                             style="height: 400px; object-fit: cover;" loading="lazy">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="card-text text-muted small flex-grow-1">
                                @(movie.Overview.Length > 100 ? movie.Overview.Substring(0, 100) + "..." : movie.Overview)
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>@movie.FormattedReleaseDate
                                    </small>
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-star"></i> @movie.VoteAverage.ToString("F1")
                                    </span>
                                </div>
                                <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary btn-sm w-100">
                                    <i class="fas fa-info-circle me-1"></i>View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination for Search Results -->
        @if (totalPages > 1)
        {
            <nav aria-label="Search results pagination">
                <ul class="pagination justify-content-center">
                    @if (currentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-route-query="@searchQuery" asp-route-page="@(currentPage - 1)">
                                <i class="fas fa-chevron-left"></i> Previous
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-route-query="@searchQuery" asp-route-page="@i">@i</a>
                        </li>
                    }

                    @if (currentPage < totalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-route-query="@searchQuery" asp-route-page="@(currentPage + 1)">
                                Next <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else if (!string.IsNullOrEmpty(searchQuery))
    {
        <div class="text-center py-5">
            <i class="fas fa-search fa-5x text-muted mb-3"></i>
            <h3 class="text-muted">No results found</h3>
            <p class="text-muted">We couldn't find any movies matching "<strong>@searchQuery</strong>"</p>
            <p class="text-muted">Try adjusting your search terms or browse our movie categories instead.</p>
            <div class="mt-3">
                <a asp-controller="Movies" asp-action="Index" class="btn btn-primary me-2">
                    <i class="fas fa-fire me-1"></i>Popular Movies
                </a>
                <a asp-controller="Movies" asp-action="Index" asp-route-category="top-rated" class="btn btn-outline-primary">
                    <i class="fas fa-trophy me-1"></i>Top Rated
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-search fa-5x text-muted mb-3"></i>
            <h3 class="text-muted">Start searching for movies</h3>
            <p class="text-muted">Enter a movie title, actor name, or keyword in the search box above.</p>
        </div>
    }
</div>