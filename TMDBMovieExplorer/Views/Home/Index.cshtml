@{
    ViewData["Title"] = "Home";
    var popularMovies = ViewBag.PopularMovies as List<TMDBMovieExplorer.Models.Movie> ?? new List<TMDBMovieExplorer.Models.Movie>();
    var topRatedMovies = ViewBag.TopRatedMovies as List<TMDBMovieExplorer.Models.Movie> ?? new List<TMDBMovieExplorer.Models.Movie>();
    var nowPlayingMovies = ViewBag.NowPlayingMovies as List<TMDBMovieExplorer.Models.Movie> ?? new List<TMDBMovieExplorer.Models.Movie>();
}

<div class="hero-section bg-dark text-white py-5 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Discover Amazing Movies</h1>
                <p class="lead">Explore popular, top-rated, and now playing movies from around the world with our comprehensive movie database.</p>
                <div class="mt-4">
                    <a asp-controller="Movies" asp-action="Index" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-film me-2"></i>Browse Movies
                    </a>
                    <a asp-controller="Movies" asp-action="Index" asp-route-category="top-rated" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-star me-2"></i>Top Rated
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-video fa-10x opacity-50"></i>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
{
    <div class="alert alert-warning" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
    </div>
}

@if (popularMovies.Any())
{
    <div class="container mb-5">
        <h2 class="mb-4">
            <i class="fas fa-fire text-danger me-2"></i>Popular Movies
            <a asp-controller="Movies" asp-action="Index" asp-route-category="popular" class="btn btn-outline-primary btn-sm ms-2">View All</a>
        </h2>
        <div class="row">
            @foreach (var movie in popularMovies)
            {
                <div class="col-lg-2 col-md-4 col-sm-6 mb-4">
                    <div class="card movie-card h-100">
                        <img src="@movie.FullPosterUrl" class="card-img-top" alt="@movie.Title" style="height: 300px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title">@movie.Title</h6>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">@movie.FormattedReleaseDate</small>
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-star"></i> @movie.VoteAverage.ToString("F1")
                                    </span>
                                </div>
                                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary btn-sm w-100 mt-2">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

